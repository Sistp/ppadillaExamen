<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ppadillaExamen.Vistas.Registros"
             Title="Registros">
    <VerticalStackLayout>
        <Label 
             x:Name="lblUsuario"
             FontSize="15"
             FontAttributes="Bold"
             TextColor="red"
   />
        <Label 
            Text="REGISTRO "
            HorizontalTextAlignment="Center"
            FontSize="22"
            FontAttributes="Bold"
            TextColor="blue"
   />
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <Label Text="Fecha"
           FontSize="18"
           Grid.Row="0"
           Grid.Column="0" />
            <DatePicker x:Name="datePicker"
                Grid.Row="0"
                Grid.Column="1" />

            <Label Text="PaÃ­s"
           FontSize="18"
           Grid.Row="1"
           Grid.Column="0" />
            <Picker x:Name="pickerPais"
            Grid.Row="1"
            Grid.Column="1">
                <Picker.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
                        <x:String>Ecuador</x:String>
                        <x:String>Mexico</x:String>
                        <x:String>Peru</x:String>
                    </x:Array>
                </Picker.ItemsSource>
            </Picker>

            <Label Text="Ciudad"
           FontSize="18"
           Grid.Row="2"
           Grid.Column="0" />
            <Picker x:Name="pickerCiudad"
            Grid.Row="2"
            Grid.Column="1">
                <Picker.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
                        <x:String>Quito</x:String>
                        <x:String>Cancun</x:String>
                        <x:String>Lima</x:String>
                    </x:Array>
                </Picker.ItemsSource>
            </Picker>

            <Label Text="Monto Inicial"
           FontSize="18"
           Grid.Row="3"
           Grid.Column="0" />
            <Entry x:Name="txtMontoInicial"
                   Keyboard="Numeric"
           Grid.Row="3"
           Grid.Column="1" />


            <Label Text="Pago Mensual"
           FontSize="18"
           Grid.Row="4"
                   
           Grid.Column="0" />
            <Entry x:Name="txtPagoMensual"
           Grid.Row="4"
           Grid.Column="1"
           IsEnabled="False" />


        </Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <Label Text="Nombre"
           FontSize="18"
           Grid.Row="0"
           Grid.Column="0" />
            <Entry x:Name="txtNombre"
           Placeholder="Ingrese nombre"
           Grid.Row="1"
           Grid.Column="0" />

            <Label Text="Apellido"
           FontSize="18"
           Grid.Row="0"
           Grid.Column="1" />
            <Entry x:Name="txtApellido"
           Placeholder="Ingrese apellido"
           Grid.Row="1"
           Grid.Column="1" />

            <Label Text="Edad"
           FontSize="18"
           Grid.Row="0"
           Grid.Column="2" />
            <Entry x:Name="txtEdad"
           Placeholder="Ingrese edad"
                   Keyboard="Numeric"
           Grid.Row="1"
           Grid.Column="2" />

        </Grid>
        <StackLayout Spacing="20" VerticalOptions="CenterAndExpand" Orientation="Horizontal">
            
            <StackLayout Spacing="20" VerticalOptions="CenterAndExpand" Orientation="Horizontal">
                <Button x:Name="btnPago" Text="CALCULAR PAGO" Clicked="btnPago_Clicked" />
                <Button x:Name="btnResumen" Text="Resumen" Clicked="btnResumen_Clicked" />
            </StackLayout>
        </StackLayout>

    </VerticalStackLayout>
</ContentPage>